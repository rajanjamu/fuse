<div id="creations">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9">
        <div class="row">

          <% @creations.each do |creation| %>
            <div class="col-sm-6 col-md-4 creation">
              <div class="thumbnail">
                <%= image_tag("thumbnail.svg") %>
                <div class="caption">
                  <h3><%= link_to creation.name, creation %></h3>
                  <p><%= creation.description %></p>
                  <p>
                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                    <span class="badge">4</span>
                    <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                    <span class="badge">4</span>
                    <span class="creator">By: <a href="#"><%= creation.user.name %></a></span>
                  </p>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
      <div class="col-sm-3">
        <%= render partial: 'layouts/sidebar', locals: { creations: @creations, users: @users } %>
      </div>
    </div>
  </div>
</div>