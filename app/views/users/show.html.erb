<div id="user">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9">
        <div class="row">
          <div class="col-md-offset-1 col-md-3 user-info">
            <div class="thumbnail">
              <%= image_tag("thumbnail.svg") %>
            </div>
            <h1 class="name"><%= @user.name %></h1>
            <h4 class="username"><%= @user.username %></h4>

            <hr/>
            <div class="info">
              <p class="country">
                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                India
              </p>
              <p class="email">
                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                <%= @user.email %>
              </p>
              <p class="joined">
                <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
                Joined <%= @user.created_at.in_time_zone('Chennai').strftime("%d %b %Y") %>
              </p>
            </div>
            <hr/>

            <div class="credits">
              <p class="row numbers">
                <span class="col-xs-4">104</span>
                <span class="col-xs-4">56</span>
                <span class="col-xs-4">23</span>
              </p>
              <p class="row icons">
                <span class="col-xs-4 glyphicon glyphicon-thumbs-up"></span>
                <span class="col-xs-4 glyphicon glyphicon-comment"></span>
                <span class="col-xs-4 glyphicon glyphicon-user"></span>
              </p>
            </div>

            <div class="follow">
              <button type="button" class="btn btn-primary">Follow</button>
            </div>
          </div>
          <div class="col-md-8">
            <% @user.creations.each do |creation| %>
              <div class="col-sm-12 col-md-6 creation">
                <%= render partial: 'creations/creation_box', locals: { creation: creation } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <%= render partial: 'layouts/sidebar', locals: { creations: @creations, users: @users } %>
      </div>
    </div>
  </div>
</div>